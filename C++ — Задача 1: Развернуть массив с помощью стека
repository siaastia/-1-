#include <iostream> // подключаем ввод-вывод
#include <vector>     // подключаем контейнер vector (массив/список)
#include <stack>      // подключаем контейнер stack (стек)
using namespace std;  // используем стандартное пространство имён

int main() {
    int n; // количество элементов массива
    cout << "Введите количество элементов: ";
    cin >> n; // считываем количество

    vector<int> arr(n); // создаём вектор нужного размера
    cout << "Введите элементы массива: ";
    for (int i = 0; i < n; i++) { // цикл ввода элементов
        cin >> arr[i]; // читаем каждый элемент
    }

    stack<int> st; // создаём стек

    // помещаем все элементы массива в стек
    for (int i = 0; i < n; i++) {
        st.push(arr[i]); // кладём элемент в стек
    }

    cout << "Массив в обратном порядке: ";
    while (!st.empty()) { // пока стек не пуст
        cout << st.top() << " "; // выводим верхний элемент
        st.pop(); // удаляем верхний элемент
    }
    cout << endl; // перевод строки
    return 0; // конец программы
}
